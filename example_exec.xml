<?xml version="1.0"?>
<project minimum_sc_version="1.1" name="Execute commands in the OS"
	description="Simple demonstration of os execution of passed commands."
	default="showdir1" basedir="." >
	
	<!--Setup basic properties-->
	<property name='replace_tags' value='1' />
	<property name='src' value='./' />
	<property name='reportSampleFreq' value='120' />
	<property name='destPath' value='' />
	<property name='path_mysql' value='' />

	<!--Setup basic tags-->
	<tag name='donttag' value='Check out this:{mytag}'/>
	<tag name='mytag' value='Easy as 123 on {DATE}'/>
	<tag name='anothertag' value='Check out this:{mytag}'/>
	<tag name='home' value='..\' />

	<log msg='{COLOR_BLUE}Available targets:{COLOR_END} {availabletargets} ' toscreen='1' tofile='0' date='0' />

	<!--This is the default target specified in the project tag-->
	<target name="showdir1" description="Display directory of first path">
		<exec value='dir {home}' reporterror='1' />
		<log msg='Executed dir listing #1 - {home} ' toscreen='1' tofile='0' />
	</target>
	
	<!--This target accepts user input for the desired directory-->
	<target name="inputdir" description="Display directory of first path">
		<tag name='home' value='.\' type='input' />
		<exec value='dir {home}' reporterror='1' />
		<log msg='Executed dir listing #1 - {home} ' toscreen='1' tofile='0' />
	</target>
	
	<!--This is the target that can be executed from the command line-->
	<target name="showdir2" description="Display directory of second path" depends="init">
		<tag name='home' value='.\' />
		<exec value='dir {home}' reporterror='1' />
		<log msg='Executed dir listing #2 - {home} ' toscreen='1' tofile='0' />
	</target>
</project>